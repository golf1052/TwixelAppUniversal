<Application
    x:Class="TwixelApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwixelApp">
    <Application.Resources>
        <DataTemplate x:Key="GameItemTemplate">
            <Grid>
                <StackPanel>
                    <Image Margin="0" Width="272" Height="380" Source="{Binding Image}"/>
                    <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="{Binding Name}" FontSize="18.667"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Application.Resources>

</Application>
