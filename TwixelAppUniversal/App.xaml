<Application
    x:Class="TwixelAppUniversal.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwixelAppUniversal"
    RequestedTheme="Light">
    <Application.Resources>
        <SolidColorBrush x:Key="CornflowerBlue" Color="CornflowerBlue"/>
        <DataTemplate x:Key="ChatListViewTemplate">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Chat/staff-icon.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Image Source="Assets/Chat/broadcaster-icon.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Image Source="Assets/Chat/turbo-icon.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding Username}" Foreground="{Binding Color}" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <TextBlock TextWrapping="Wrap" Text="{Binding Message}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Application.Resources>

</Application>
